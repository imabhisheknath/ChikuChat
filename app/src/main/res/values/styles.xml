<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#4960e0</item>
        <item name="colorPrimaryDark">#4960e0</item>
        <item name="colorPrimary">#4960e0</item>
    </style>
     <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#4960e0</item>
        <item name="colorPrimaryDark">#4960e0</item>
        <item name="colorPrimary">#4960e0</item>
    </style>
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyAppTheme" parent="@style/AppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay">
        <item name="colorAccent">#5A9C30</item>
        <item name="colorPrimaryDark">#46BA44</item>
        <item name="colorPrimary">#2EDF5C</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#9F9F9F</item>
        <item name="colorControlActivated">#9F9F9F</item>
        <item name="colorControlHighlight">#9F9F9F</item>
    </style>


    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>
